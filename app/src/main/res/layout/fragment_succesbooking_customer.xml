<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/img_loc"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_50"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/place_holder_list" />

    <com.virtual.customervendor.customview.CustomTextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="@string/booking_confirmed_successfully"
        android:textColor="@color/text1_color_101010"
        android:textSize="@dimen/sp_22"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_30"
        app:customFont="@string/fontBold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_loc" />

    <com.virtual.customervendor.customview.CustomTextView
        android:id="@+id/txt_trans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transaction ID"
        android:textColor="@color/themecolor_022E8D"
        android:textSize="@dimen/sp_20"
        android:layout_marginTop="@dimen/dp_15"
        app:customFont="@string/fontBold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title" />

    <com.virtual.customervendor.customview.CustomTextView
        android:id="@+id/txt_datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date &amp; Time"
        android:textColor="@color/themecolor_022E8D"
        android:textSize="@dimen/sp_20"
        app:customFont="@string/fontBold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_trans" />


</android.support.constraint.ConstraintLayout>