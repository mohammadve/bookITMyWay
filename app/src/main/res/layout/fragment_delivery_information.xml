<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_servicearea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:imeOptions="actionNext"
            android:theme="@style/StyleTextInputLayout"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.virtual.customervendor.customview.CustomEditText
                android:id="@+id/ed_servicearea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_drop_down"
                android:focusable="false"
                android:hint="@string/service_area"
                android:inputType="text"
                android:paddingLeft="@dimen/dp_10"
                android:textColor="@color/text2_color_7d7d7d"
                android:textColorHint="@color/menu_bg_color_cccccc"
                app:customFont="@string/fontRegular" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:imeOptions="actionNext"
            android:theme="@style/StyleTextInputLayout"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_servicearea">

            <com.virtual.customervendor.customview.CustomEditText
                android:id="@+id/ed_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/section"
                android:inputType="text"
                android:paddingLeft="@dimen/dp_10"
                android:textColor="@color/text2_color_7d7d7d"
                android:textColorHint="@color/menu_bg_color_cccccc"
                app:customFont="@string/fontRegular" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:imeOptions="actionNext"
            android:theme="@style/StyleTextInputLayout"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_section">

            <com.virtual.customervendor.customview.CustomEditText
                android:id="@+id/ed_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/row"
                android:inputType="number"
                android:maxLength="3"
                android:paddingLeft="@dimen/dp_10"
                android:textColor="@color/text2_color_7d7d7d"
                android:textColorHint="@color/menu_bg_color_cccccc"
                app:customFont="@string/fontRegular" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_seat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:imeOptions="actionNext"
            android:theme="@style/StyleTextInputLayout"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_row">

            <com.virtual.customervendor.customview.CustomEditText
                android:id="@+id/ed_seat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/seat_number"
                android:inputType="number"
                android:maxLength="3"
                android:paddingLeft="@dimen/dp_10"
                android:textColor="@color/text2_color_7d7d7d"
                android:textColorHint="@color/menu_bg_color_cccccc"
                app:customFont="@string/fontRegular" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_address1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_20"
            android:imeOptions="actionNext"
            android:theme="@style/StyleTextInputLayout"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_seat">

            <com.virtual.customervendor.customview.CustomEditText
                android:id="@+id/ed_address1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/address_line_1"
                android:inputType="text"
                android:paddingLeft="@dimen/dp_10"
                android:textColor="@color/text2_color_7d7d7d"
                android:textColorHint="@color/menu_bg_color_cccccc"
                app:customFont="@string/fontRegular" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_address2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_20"
            android:imeOptions="actionNext"
            android:theme="@style/StyleTextInputLayout"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_address1">

            <com.virtual.customervendor.customview.CustomEditText
                android:id="@+id/ed_address2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/address_line_2"
                android:inputType="text"
                android:paddingLeft="@dimen/dp_10"
                android:textColor="@color/text2_color_7d7d7d"
                android:textColorHint="@color/menu_bg_color_cccccc"
                app:customFont="@string/fontRegular" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_20"
            android:imeOptions="actionNext"
            android:theme="@style/StyleTextInputLayout"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_address2">

            <com.virtual.customervendor.customview.CustomEditText
                android:id="@+id/ed_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/city"
                android:inputType="text"
                android:paddingLeft="@dimen/dp_10"
                android:textColor="@color/text2_color_7d7d7d"
                android:textColorHint="@color/menu_bg_color_cccccc"
                app:customFont="@string/fontRegular" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_region"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_20"
            android:imeOptions="actionNext"
            android:theme="@style/StyleTextInputLayout"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_city">

            <com.virtual.customervendor.customview.CustomEditText
                android:id="@+id/ed_region"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/region"
                android:inputType="text"
                android:paddingLeft="@dimen/dp_10"
                android:textColor="@color/text2_color_7d7d7d"
                android:textColorHint="@color/menu_bg_color_cccccc"
                app:customFont="@string/fontRegular" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_zip_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_20"
            android:imeOptions="actionNext"
            android:theme="@style/StyleTextInputLayout"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_region">

            <com.virtual.customervendor.customview.CustomEditText
                android:id="@+id/ed_zip_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/zip_code_posta"
                android:inputType="number"
                android:maxLength="7"
                android:paddingLeft="@dimen/dp_10"
                android:textColor="@color/text2_color_7d7d7d"
                android:textColorHint="@color/menu_bg_color_cccccc"
                app:customFont="@string/fontRegular" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:id="@+id/start_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_20"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_zip_code">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight=".7"
                android:gravity="center_horizontal"
                android:imeOptions="actionNext"
                android:theme="@style/StyleTextInputLayout">

                <com.virtual.customervendor.customview.CustomEditText
                    android:id="@+id/ed_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:gravity="center_horizontal"
                    android:hint="@string/ccode"
                    android:inputType="number"
                    android:maxLength="5"
                    android:textColor="@color/text2_color_7d7d7d"
                    android:textColorHint="@color/menu_bg_color_cccccc"
                    app:customFont="@string/fontRegular" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_phone_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.3"
                android:focusable="true"
                android:imeOptions="actionNext"
                android:theme="@style/StyleTextInputLayout">

                <com.virtual.customervendor.customview.CustomEditText
                    android:id="@+id/ed_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/mobile_number"
                    android:inputType="number"
                    android:maxLength="12"
                    android:textColor="@color/text2_color_7d7d7d"
                    android:textColorHint="@color/menu_bg_color_cccccc"
                    app:customFont="@string/fontRegular" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <com.virtual.customervendor.customview.CustomTextView
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/btn_bg_click"
            android:gravity="center"
            android:stateListAnimator="@animator/us_button_selector"
            android:text="@string/next"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/sp_20"
            app:customFont="@string/fontBold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/start_lay" />
    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>
