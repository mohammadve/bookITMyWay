<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rl_profileImage"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:layout_centerHorizontal="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_30">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/profile_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher_round"/>

    </RelativeLayout>


    <com.virtual.customervendor.customview.CustomTextView
        android:id="@+id/btn_fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_30"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_6"
        android:text="John Doe"
        android:textColor="@color/text1_color_101010"
        android:textSize="@dimen/sp_18"
        app:customFont="@string/fontRegular"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_profileImage" />

    <com.virtual.customervendor.customview.CustomTextView
        android:id="@+id/btn_comp_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:textColor="@color/text1_color_101010"
        android:textSize="@dimen/sp_18"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_6"
        android:text="Company Name"
        app:customFont="@string/fontRegular"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_fullname" />

    <com.virtual.customervendor.customview.CustomTextView
        android:id="@+id/btn_mobileno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:textColor="@color/text1_color_101010"
        android:textSize="@dimen/sp_18"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_6"
        android:text="+91 9999-9999-99"
        app:customFont="@string/fontRegular"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_comp_name" />


    <com.virtual.customervendor.customview.CustomTextView
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:textColor="@color/text1_color_101010"
        android:textSize="@dimen/sp_18"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_6"
        android:text="Address"
        app:customFont="@string/fontRegular"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_mobileno" />

    <com.virtual.customervendor.customview.CustomTextView
        android:id="@+id/btn_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:textColor="@color/text1_color_101010"
        android:textSize="@dimen/sp_18"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_6"
        android:text="Email"
        app:customFont="@string/fontRegular"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_add" />

    <com.virtual.customervendor.customview.CustomTextView
        android:id="@+id/btn_headoffice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:textColor="@color/text1_color_101010"
        android:textSize="@dimen/sp_18"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_6"
        android:text="Head Office"
        app:customFont="@string/fontRegular"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_email" />

    <com.virtual.customervendor.customview.CustomTextView
        android:id="@+id/btn_headoffice_loc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:textColor="@color/text1_color_101010"
        android:textSize="@dimen/sp_18"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:padding="@dimen/dp_6"
        android:text="Head Office Location"
        app:customFont="@string/fontRegular"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_headoffice" />

</android.support.constraint.ConstraintLayout>