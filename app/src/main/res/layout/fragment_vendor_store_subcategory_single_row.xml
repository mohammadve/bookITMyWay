<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_5">


    <com.virtual.customervendor.customview.BubbleImageView
        android:id="@+id/ivUserPic"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:scaleType="centerCrop"
        android:src="@drawable/place_holder_list"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/bname"
        app:siArrowPosition="right"
        app:siSquare="true"
        app:srcCompat="@drawable/place_holder_round" />


    <com.virtual.customervendor.customview.CustomTextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:text="Subcategory Name"
        android:textColor="@color/text1_color_101010"
        android:textSize="@dimen/sp_18"
        android:ellipsize="end"
        app:customFont="@string/fontRegular"
        app:layout_constraintBottom_toBottomOf="@+id/ivUserPic"
        app:layout_constraintLeft_toRightOf="@+id/ivUserPic"
        app:layout_constraintTop_toTopOf="@+id/ivUserPic" />



    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ivedit"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        app:srcCompat="@drawable/ic_edit"
        android:padding="@dimen/dp_3"
        android:foreground="?android:selectableItemBackground"
        android:layout_marginRight="@dimen/dp_10"
        app:layout_constraintRight_toLeftOf="@+id/iv_delete"
        app:layout_constraintBottom_toBottomOf="@+id/name"
        app:layout_constraintTop_toTopOf="@id/name"
         />


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_delete"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:padding="@dimen/dp_3"
        android:foreground="?android:selectableItemBackground"
        android:layout_marginRight="@dimen/dp_5"
        app:srcCompat="@drawable/ic_delete"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/name"
        app:layout_constraintTop_toTopOf="@id/name"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/sp_1"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/menu_bg_color_cccccc"
        app:layout_constraintTop_toBottomOf="@+id/ivUserPic" />


</android.support.constraint.ConstraintLayout>




