<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_20"
    android:layout_marginRight="@dimen/dp_20"
    android:background="@drawable/edittext_bg"
    android:padding="@dimen/dp_10">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/img_loc"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/place_holder_list" />

    <com.virtual.customervendor.customview.CustomTextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="Restaurant Name"
        android:textColor="@color/text1_color_101010"
        android:textSize="@dimen/sp_20"
        app:customFont="@string/fontRegular"
        app:layout_constraintLeft_toRightOf="@+id/img_loc"
        app:layout_constraintTop_toTopOf="@+id/img_loc" />

    <com.virtual.customervendor.customview.CustomTextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="Category"
        android:textColor="@color/text1_color_101010"
        android:textSize="@dimen/sp_20"
        app:customFont="@string/fontThin"
        app:layout_constraintBottom_toTopOf="@+id/txt_validty"
        app:layout_constraintLeft_toRightOf="@+id/img_loc"
        app:layout_constraintTop_toBottomOf="@+id/txt_title" />

    <com.virtual.customervendor.customview.CustomTextView
        android:id="@+id/txt_validty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="Timings"
        android:textColor="@color/text1_color_101010"
        android:textSize="@dimen/sp_20"
        app:customFont="@string/fontThin"
        app:layout_constraintBottom_toBottomOf="@+id/img_loc"
        app:layout_constraintLeft_toRightOf="@+id/img_loc"
        app:layout_constraintTop_toBottomOf="@+id/txt_name" />


    <com.virtual.customervendor.customview.CustomTextView
        android:id="@+id/txt_getnow"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_45"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/btn_bg_click"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_40"
        android:paddingRight="@dimen/dp_40"
        android:text="@string/book"
        android:textColor="@color/text_color_white"
        android:textSize="@dimen/sp_20"
        app:customFont="@string/fontBold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_validty" />
</android.support.constraint.ConstraintLayout>




