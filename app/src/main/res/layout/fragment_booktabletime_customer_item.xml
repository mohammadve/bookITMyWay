<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"

    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10">


    <com.virtual.customervendor.customview.CustomTextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="Offers near by you"
        android:textColor="@color/menu_text_color_404040"
        android:textSize="@dimen/sp_20"
        app:customFont="@string/fontRegular"
        app:layout_constraintLeft_toRightOf="@+id/img_loc"
        app:layout_constraintTop_toTopOf="parent" />


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_search"
        android:textColor="@color/menu_text_color_404040"
        android:textSize="@dimen/sp_14"
        app:customFont="@string/fontRegular"
        app:layout_constraintTop_toTopOf="@+id/txt_title"
        app:layout_constraintBottom_toBottomOf="@+id/txt_title"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/btn_bg_color_d8d8d8"
        app:layout_constraintTop_toBottomOf="@+id/txt_title" />


</android.support.constraint.ConstraintLayout>


