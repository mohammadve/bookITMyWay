<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dp_15"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ivUserPic"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_90"
        android:contentDescription="@string/navigation_header"
        app:srcCompat="@drawable/ic_launcher_round" />

    <com.virtual.customervendor.customview.CustomTextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Surender Garg"

        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/themecolor_022E8D"
        android:textSize="@dimen/sp_18"
        app:customFont="@string/fontBold" />
</LinearLayout>
