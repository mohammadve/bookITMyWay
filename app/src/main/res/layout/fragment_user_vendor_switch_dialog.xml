<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_15"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_30">


        <com.virtual.customervendor.customview.CustomTextView
            android:id="@+id/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_heading_bg"
            android:gravity="center_horizontal"
            android:padding="@dimen/dp_5"
            android:text="@string/business_list"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20"
            android:visibility="visible"
            app:customFontet="@string/fontRegular" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_countryList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:overScrollMode="never"
            android:scrollbars="none" />

        <com.virtual.customervendor.customview.CustomTextView
            android:id="@+id/txt_anotherbus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/add_another_business"
            android:textColor="@color/themecolor_022E8D"
            android:textSize="@dimen/sp_18"
            android:visibility="visible"
            app:customFontet="@string/fontRegular" />

    </LinearLayout>
</LinearLayout>