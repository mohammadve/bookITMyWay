<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/bname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.virtual.customervendor.customview.CustomTextView
            android:id="@+id/t_packname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/packagename"
            android:textColor="@color/text1_color_101010"
            android:textSize="@dimen/sp_14"
            android:theme="@style/StyleTextInputLayout"
            app:customFont="@string/fontBold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/txtpack"
            app:layout_constraintTop_toTopOf="parent" />

        <com.virtual.customervendor.customview.CustomTextView
            android:id="@+id/txtpack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/name"
            android:textColor="@color/text2_color_7d7d7d"
            android:textSize="@dimen/sp_14"
            android:theme="@style/StyleTextInputLayout"
            app:customFont="@string/fontRegular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/t_packname"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/pcost"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bname">

        <com.virtual.customervendor.customview.CustomTextView
            android:id="@+id/t_cost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/package_cost"
            android:textColor="@color/text1_color_101010"
            android:textSize="@dimen/sp_14"
            android:theme="@style/StyleTextInputLayout"
            app:customFont="@string/fontBold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/txtcost"
            app:layout_constraintTop_toTopOf="parent" />

        <com.virtual.customervendor.customview.CustomTextView
            android:id="@+id/txtcost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/name"
            android:textColor="@color/text2_color_7d7d7d"
            android:textSize="@dimen/sp_14"
            android:theme="@style/StyleTextInputLayout"
            app:customFont="@string/fontRegular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/t_cost"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/p_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pcost">

        <com.virtual.customervendor.customview.CustomTextView
            android:id="@+id/t_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/service_day"
            android:textColor="@color/text1_color_101010"
            android:textSize="@dimen/sp_14"
            android:theme="@style/StyleTextInputLayout"
            app:customFont="@string/fontBold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/datetime"
            app:layout_constraintTop_toTopOf="parent" />

        <com.virtual.customervendor.customview.CustomTextView
            android:id="@+id/datetime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/name"
            android:textColor="@color/text2_color_7d7d7d"
            android:textSize="@dimen/sp_14"
            android:theme="@style/StyleTextInputLayout"
            app:customFont="@string/fontRegular"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/t_date"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/sp_1"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/menu_bg_color_cccccc"
        app:layout_constraintTop_toBottomOf="@+id/p_date" />


</android.support.constraint.ConstraintLayout>




